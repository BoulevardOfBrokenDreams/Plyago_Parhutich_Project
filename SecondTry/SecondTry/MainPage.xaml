<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecondTry.MainPage">
    
    <StackLayout>
        <Button Text="Понедельник" Padding="10, 10, 10, 10" x:Name="MondayButton" Clicked="OnButtonClicked"></Button>
        <Button Text="Вторник" Padding="10, 10, 10, 10" x:Name="TuesdayButton" Clicked="OnButtonClicked"></Button>
        <Button Text="Среда" Padding="10, 10, 10, 10" x:Name="WednesdayButton" Clicked="OnButtonClicked"></Button>
        <Button Text="Четверг" Padding="10, 10, 10, 10" x:Name="ThursdayButton" Clicked="OnButtonClicked"></Button>
        <Button Text="Пятница" Padding="10, 10, 10, 10" x:Name="FridayButton" Clicked="OnButtonClicked"></Button>
        <Button Text="Суббота" Padding="10, 10, 10, 10" x:Name="SaturdayButton" Clicked="OnButtonClicked"></Button>
    </StackLayout>

</ContentPage>
